    <div class="playlists">
        <h2>Focus</h2>
        <div class="list">
            <div class="item">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQJMnDNua5uGurKIhcytPXCkZYvkWESKwbg4w&usqp=CAU" />
